#!/bin/bash
battery=(󰂃 󰁻 󰁼 󰁽 󰁾 󰁿 󰂀 󰂁 󰂂 󰁹 󰂄) 
capacity=$(< /sys/class/power_supply/BAT0/capacity)
status=$(< /sys/class/power_supply/BAT0/status)
date=$(date +"%a, %-d %b %H:%M")
if [[ $status == "Discharging" ]]; then
    index=$(( capacity < 100 ? capacity/10 : 9 ))
else
    index=10
fi
printf " %s %d%% | %s\n" "${battery[index]}" "$capacity" "$date"
