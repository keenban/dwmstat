#!/bin/bash
battery=(󰂃 󰁻 󰁼 󰁽 󰁾 󰁿 󰂀 󰂁 󰂂 󰁹 󰂄) 
capacity=$(< /sys/class/power_supply/BAT0/capacity)
status=$(< /sys/class/power_supply/BAT0/status)
date=$(date +"%a, %-d %b %H:%M")
if [[ $status == "Discharging" ]]; then
    for i in {0..9}; do
	if (($capacity >= $i*10 && $capacity < $i*10+10)); then
	    echo " ${battery[i]}" "$capacity"% \| "$date"
	fi
    done
else
    echo " ${battery[10]} \|" "$date"
fi	   
